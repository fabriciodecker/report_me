# ===================================
# CONFIGURAÇÕES DE PRODUÇÃO - ReportMe
# ===================================

# Django Core Settings
SECRET_KEY=your-super-secret-key-here-change-this-in-production
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,localhost

# Database Settings (PostgreSQL)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=reportme
DB_USER=reportme
DB_PASSWORD=your-secure-database-password-here
DB_HOST=postgres
DB_PORT=5432

# Redis Settings
REDIS_PASSWORD=your-secure-redis-password-here
REDIS_URL=redis://:your-secure-redis-password-here@redis:6379/1

# Email Settings (configurar com seu provedor)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-app-password

# Sentry (Monitoramento de Erros)
SENTRY_DSN=https://your-sentry-dsn-here@sentry.io/project-id

# JWT Settings
JWT_SECRET_KEY=your-jwt-secret-key-different-from-django-secret
JWT_ACCESS_TOKEN_LIFETIME=3600  # 1 hora em segundos
JWT_REFRESH_TOKEN_LIFETIME=604800  # 7 dias em segundos

# CORS Settings
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_ALLOW_CREDENTIALS=True

# Static and Media Files
STATIC_URL=/static/
MEDIA_URL=/media/
STATIC_ROOT=/app/staticfiles
MEDIA_ROOT=/app/media

# SSL/Security Settings
USE_TLS=True
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# Frontend Settings
REACT_APP_API_URL=https://yourdomain.com/api

# Monitoring (Grafana)
GRAFANA_PASSWORD=your-secure-grafana-password

# Backup Settings
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket-name
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_DEFAULT_REGION=us-east-1

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/reportme/reportme.log

# Performance Settings
GUNICORN_WORKERS=4
GUNICORN_TIMEOUT=120
GUNICORN_KEEPALIVE=5

# Cache Settings
CACHE_TTL=3600  # 1 hora
SESSION_CACHE_ALIAS=default

# Rate Limiting
RATELIMIT_ENABLE=True
RATELIMIT_USE_CACHE=default

# ===================================
# INSTRUÇÕES DE CONFIGURAÇÃO
# ===================================

# 1. Copie este arquivo para .env na raiz do projeto
# 2. Altere TODOS os valores de exemplo pelos reais
# 3. Nunca commite este arquivo no Git
# 4. Para desenvolvimento, use .env.dev
# 5. Para produção, use variáveis de ambiente do sistema ou .env

# SEGURANÇA CRÍTICA:
# - Gere SECRET_KEY aleatória com: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
# - Use senhas fortes para banco de dados e Redis
# - Configure SSL/HTTPS antes de ir para produção
# - Configure Sentry para monitoramento
# - Configure backups automáticos